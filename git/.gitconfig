[user]
    name = 李天华
    email = litianhua@moresec.cn
[format]
    pretty = medium
[core]
    editor = nvim
    pager = delta --diff-so-fancy --true-color=always
    excludesfile = ~/.gitignore_global
    quotepath = false
[credential]
    helper = store
[color]
    ui = always
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[diff]
    tool = vimdiff
    colorMoved = default
[difftool]
    prompt = false
    trustExitCode = true
[difftool "vimdiff"]
    path = nvim
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
    trustExitCode = true
    keepBackup = false
[mergetool "vimdiff"]
    path = nvim
[log]
    date = local
[push]
    default = simple
[pull]
    rebase = false
[init]
    defaultBranch = master
[advice]
    skippedCherryPicks = false
